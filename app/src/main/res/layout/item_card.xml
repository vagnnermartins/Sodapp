<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:minHeight="?android:attr/listPreferredItemHeightLarge"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="4dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:textAppearance="?android:attr/textAppearanceListItemSmall"
    android:weightSum="10">

    <ImageView
        android:id="@+id/item_card_image"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_weight="2"
        android:adjustViewBounds="true"
        android:gravity="center_vertical"
        android:src="@drawable/image_alimentacao_pass" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_card_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="6"
            android:maxLines="2"
            android:text="Call Tecnologia"
            android:textColor="@color/primary_text"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/item_card_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="6"
            android:maxLines="2"
            android:text="R$: 30,24"
            android:textColor="@color/second_text"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_card_last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:maxLines="2"
                android:text="@string/cards_activity_last"
                android:textColor="@color/second_text"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/item_card_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:maxLines="2"
                android:text="20/02/2014"
                android:textColor="@color/second_text"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>